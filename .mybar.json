{
    "align_to_seconds": true,
    "//fmt": "{uptime}! CPU: {cpu_usage},{cpu_temp} {datetime}",
    "run_once": false,
    "separator": "|",
    "//separators": ["$", "&"],
    "refresh_rate": 1,
    "join_empty_fields": false,

    "field_definitions": {

        "foo": {
            "custom": true,
            "fmt": "{}f",
            "constant_output": "Fooooo"
        },

        "hostname": {
            "interval": 10
        },

        "uptime": {
            "kwargs": {
                "fmt": "{days}d:{hours}h:{mins}m",
                "sep": ":"
            },
            "align_to_seconds": true,
            "icon": "Up "
        },

        "cpu_usage": {
            "interval": 2,
            "threaded": false,
            "icon": "CPU "
        },

        "cpu_temp": {
            "interval": 2,
            "threaded": false,
            "icon": ""
        },

        "mem_usage": {
            "interval": 2,
            "icon": "Mem "
        },

        "disk_usage": {
            "interval": 4,
            "icon": "/:"
        },

        "battery": {
            "overrides_refresh": false,
            "interval": 1,
            "threaded": true,
            "align_to_seconds": false,
            "icon": "Bat "
        },

        "net_stats": {
            "interval": 4
        },

        "datetime": {
            "threaded": false,
            "icons": ["PTY", "TTY"],
            "overrides_refresh": false,
            "kwargs": {
                "fmt": "%Y-%m-%d %H:%M:%S.%f"
            },
            "interval": 1,
            "align_to_seconds": true
        }

    },

    "field_order": [
        "foo",
        "//hostname",
        "uptime",
        "cpu_usage",
        "cpu_temp",
        "mem_usage",
        "disk_usage",
        "battery",
        "net_stats",
        "datetime"
    ]
}
